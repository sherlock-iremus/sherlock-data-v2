: "/div[1]/quote[1]/lg[3]/l[2]", "tag": "l", "children": [{"id": "/div[1]/quote[1]/lg[3]/l[2]/text()[1]", "text": " Arrive icy pour nous apprendre"}]}, {"id": "/div[1]/quote[1]/lg[3]/l[3]", "tag": "l", "children": [{"id": "/div[1]/quote[1]/lg[3]/l[3]/text()[1]", "text": "  Comment le grand Alcandre"}]}, {"id": "/div[1]/quote[1]/lg[3]/l[4]", "tag": "l", "children": [{"id": "/div[1]/quote[1]/lg[3]/l[4]/text()[1]", "text": "Nous a par sa valeur procuré ce repos."}]}]}, {"id": "/div[1]/quote[1]/lg[4]", "tag": "lg", "children": [{"id": "/div[1]/quote[1]/lg[4]/label[1]", "tag": "label", "children": [{"id": "/div[1]/quote[1]/lg[4]/label[1]/text()[1]", "text": "MYRTIL."}], "attributes": {"type": "speaker"}}, {"id": "/div[1]/quote[1]/lg[4]/l[1]", "tag": "l", "children": [{"id": "/div[1]/quote[1]/lg[4]/l[1]/text()[1]", "text": "Ouy, ce vaillant Berger par l’effort de ses armes"}]}, {"id": "/div[1]/quote[1]/lg[4]/l[2]", "tag": "l", "children": [{"id": "/div[1]/quote[1]/lg[4]/l[2]/text()[1]", "text": "A de tous ces cantons dissipé les alarmes,"}]}, {"id": "/div[1]/quote[1]/lg[4]/l[3]", "tag": "l", "children": [{"id": "/div[1]/quote[1]/lg[4]/l[3]/text()[1]", "text": " Nous a ramené les beaux jours"}]}, {"id": "/div[1]/quote[1]/lg[4]/l[4]", "tag": "l", "children": [{"id": "/div[1]/quote[1]/lg[4]/l[4]/text()[1]", "text": " Les Jeux & les Amours."}]}, {"id": "/div[1]/quote[1]/lg[4]/l[5]", "tag": "l", "children": [{"id": "/div[1]/quote[1]/lg[4]/l[5]/text()[1]", "text": "Ouy, sans craindre des loups la rage & la furie"}]}, {"id": "/div[1]/quote[1]/lg[4]/l[6]", "tag": "l", "children": [{"id": "/div[1]/quote[1]/lg[4]/l[6]/text()[1]", "text": "Nos moutons desormais paistront dans la prairie"}]}, {"id": "/div[1]/quote[1]/lg[4]/l[7]", "tag": "l", "children": [{"id": "/div[1]/quote[1]/lg[4]/l[7]/text()[1]", "text": " Pendant qu’à l’ombre des ormeaux"}]}, {"id": "/div[1]/quote[1]/lg[4]/l[8]", "tag": "l", "children": [{"id": "/div[1]/quote[1]/lg[4]/l[8]/text()[1]", "text": "Nous danserons en